{
    "compilerOptions": {
        "module": "ESNext",                  // Ensure ESNext modules for modern JS
        "moduleResolution": "node",          // Use Node.js module resolution
        "target": "ES2021",                  // Modern JavaScript output
        "outDir": "dist",                    // Output to dist folder
        "declaration": true,                 // Include type declarations
        "declarationMap": true,              // Generate declaration maps
        "skipLibCheck": true,                // Skip library checks for faster builds
        "resolveJsonModule": true,           // Resolve JSON imports
        "strict": true,                      // Enable strict mode
        "allowJs": true,                     // Allow JS files to be imported
        "baseUrl": ".",                      // Resolve imports from the root directory
        "paths": {
            "*": ["src/*"]                     // Resolve paths from 'src' directory
        }
    },
    "include": ["src/**/*"],               // Include all TypeScript files in the src folder
    "exclude": ["node_modules", "dist"]    // Exclude the dist and node_modules folders
  }