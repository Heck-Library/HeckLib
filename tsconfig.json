{
    "compilerOptions": {
        "target": "ES2021", // Target modern JavaScript (ES2021 or later)
        "module": "ESNext", // Use ES modules
        "moduleResolution": "node", // Resolve modules like Node.js does
        "outDir": "dist", // Output compiled JS files into the 'dist' folder
        "esModuleInterop": true, // Enable interop with CommonJS modules
        "skipLibCheck": true, // Skip type-checking of declaration files
        "strict": true, // Enable strict type-checking
        "declaration": true, // Generate declaration files (.d.ts)
        "declarationMap": true, // Generate declaration maps
        "resolveJsonModule": true, // Allow importing JSON files
        "allowJs": false, // Disallow JS files (only compile TS)
        "sourceMap": true, // Generate source maps for debugging
        "baseUrl": ".", // Base directory for module resolution
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ] // Resolve modules within 'src'
        }
    },
    "include": [
        "src/**/*" // Include everything in the 'src' folder
    ],
    "exclude": [
        "node_modules",
        "dist" // Exclude 'node_modules' and 'dist' from the compilation
    ]
}