{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "outDir": "package", // Output compiled JS files into the 'dist' folder
        "skipLibCheck": true, // Skip type-checking of declaration files
        "strict": true, // Enable strict type-checking
        "declaration": true, // Generate declaration files (.d.ts)
        "declarationMap": true, // Generate declaration maps
        "esModuleInterop": true,
        "allowJs": true, // Disallow JS files (only compile TS)
        "sourceMap": true, // Generate source maps for debugging
        "baseUrl": ".", // Base directory for module resolution
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*" // Include everything in the 'src' folder
    ],
    "exclude": [
        "node_modules",
        "package"
    ]
}