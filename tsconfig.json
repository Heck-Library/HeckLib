{
    "compilerOptions": {
      "module": "CommonJS",              // Change from ESNext to CommonJS
      "moduleResolution": "node",        // Use Node.js module resolution
      "target": "ES2021",                // Target modern JS
      "outDir": "dist",                  // Output to the dist folder
      "declaration": true,               // Include TypeScript declaration files
      "declarationMap": true,            // Generate declaration maps
      "esModuleInterop": true,           // Enable compatibility for importing CommonJS modules
      "skipLibCheck": true,              // Skip type checking for declaration files
      "resolveJsonModule": true,         // Allow imports of JSON modules
      "strict": true,                    // Enable strict mode for TypeScript
      "allowJs": true,                   // Allow JavaScript files
      "baseUrl": ".",                    // Resolve imports from root
      "paths": {
        "*": ["src/*"]                   // Base path mapping
      }
    },
    "include": ["src/**/*"],             // Include all source files in the src folder
    "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist
  }
  