{
    "name": "hecklib",
    "author": "Jevk",
    "license": "MIT",
    "version": "3.2.10",
    "description": "A modular TypeScript library for Beat Saber modmapping using only Node.js",
    "main": "index.js",
    "types": "index.d.ts",
    "repository": "github:heck-library/hecklib",
    "scripts": {
        "prepublishOnly": "npm run build && npm run prepare",
        "build": "tsc",
        "prepare": "rm -rf package && mkdir package && cp -r dist/* package/",
        "watch-ts": "nodemon --exec tsx script.ts",
        "watch-js": "nodemon script.js"
    },
    "devDependencies": {
        "@types/node": "^22.13.14",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0"
    },
    "files": [
        "package/**/*"
    ],
    "directories": {
        "bin": "package"
    }
}
