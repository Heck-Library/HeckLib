{
    "name": "hecklib",
    "author": "Jevk",
    "license": "MIT",
    "version": "3.2.15",
    "description": "A modular TypeScript library for Beat Saber modmapping using only Node.js",
    "main": "index.js",
    "types": "index.d.ts",
    "repository": "github:heck-library/hecklib",
    "scripts": {
        "build": "rm -rf package/ && tsc && cp package.json package/package.json",
        "watch-ts": "nodemon --exec tsx script.ts",
        "watch-js": "nodemon script.js"
    },
    "devDependencies": {
        "@types/node": "^22.13.14",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0"
    }
}